<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2><%= t('.forgot_your_password') %></h2>
      <%# メール機能が実装されたら外す. %>
      <div class='text-danger'><%= t('.unable_now') %></div>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%# メール機能が実装されたら disabled を外す. %>
          <%= f.button :submit, t('.send_instructions'), class: 'btn btn-primary',
          disabled: true %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
