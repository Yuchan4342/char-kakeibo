<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h2><%= t('.purchases') %></h2>
      <div class='text-right'>
        <%= link_to(new_purchase_path) do %>
        <span class="btn btn-primary mb-2"><%= t('.new_purchase') %></span>
        <% end %>
      </div>
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <tr>
            <th><%= Purchase.human_attribute_name('bought_at') %></th>
            <th><%= Category.model_name.human %></th>
            <th><%= Purchase.human_attribute_name('name') %></th>
            <th><%= Purchase.human_attribute_name('price') %></th>
            <th><%= t('.actions') %></th>
          </tr>
        </thead>
        <tbody>
          <% @purchases.each do |purchase| %>
            <tr>
            <th><%= l(purchase.bought_at.to_date, format: :long) %></th>
            <th><%= purchase.category&.name %></th>
            <th><%= purchase.name %></th>
            <th><%= number_to_currency(purchase.price) %></th>
            <th>
              <%= link_to(edit_purchase_path(purchase)) do %>
              <span class="btn btn-sm btn-success"><%= t('.action.edit') %></span>
              <% end %>
              <%= link_to(purchase, method: :delete, data: { confirm: '削除しますか?' }) do %>
              <span class="btn btn-sm btn-danger"><%= t('.action.delete') %></span>
              <% end %>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
