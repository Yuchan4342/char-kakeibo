<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1><%= t('title') %></h1>
      <%= link_to(new_purchase_path) do %>
      <span class="btn btn-primary"><%= t('.new_purchase') %></span>
      <% end %>
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <tr>
            <th><%= Purchase.human_attribute_name('bought_at') %></th>
            <th><%= Purchase.human_attribute_name('name') %></th>
            <th><%= Purchase.human_attribute_name('price') %></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @purchases.each do |purchase| %>
            <tr>
            <th><%= l(purchase.bought_at.to_date, format: :long) %></th>
            <th><%= purchase.name %></th>
            <th><%= number_to_currency(purchase.price) %></th>
            <th>
              <%= link_to(edit_purchase_path(purchase)) do %>
              <span class="btn btn-primary"><%= t('.action.edit') %></span>
              <% end %>
            </th>
            <th>
              <%= link_to(purchase, method: :delete, data: { confirm: '削除しますか?' }) do %>
              <span class="btn btn-primary"><%= t('.action.delete') %></span>
              <% end %>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
