<% new ||= false %>
<%= simple_form_for @category, html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :name, label: Category.human_attribute_name('name') %>
  <div class='form-group form-actions'>
    <div class="control-group col-sm-offset-3 col-sm-9 col-lg-6">
      <%= f.button :submit, class: 'btn-primary' %>
    </div>
  </div>
<% end %>
