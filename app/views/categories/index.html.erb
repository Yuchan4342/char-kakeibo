<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2><%= Category.model_name.human %></h2>
      <div class='text-right'>
        <%= link_to(new_category_path) do %>
        <span class="btn btn-primary mb-2"><%= t('.new_category') %></span>
        <% end %>
      </div>
      <table class="table table-striped table-hover table-sm">
        <thead class="thead-light">
          <tr>
            <th><%= Category.human_attribute_name('name') %></th>
            <th width="120"><%= t('.actions') %></th>
          </tr>
        </thead>
        <tbody>
          <% if @categories.count.zero? %>
            <tr><td class='text-center' colspan='2'><%= t('.no_data', default: "No Data") %></td></tr>
          <% else %>
            <% @categories.each do |category| %>
              <tr>
              <td><%= category.name %></td>
              <td>
                <%= link_to(edit_category_path(category)) do %>
                <span class="btn btn-sm btn-success"><%= t('.action.edit') %></span>
                <% end %>
                <%= link_to(category, method: :delete, data: { confirm: '削除しますか?' }) do %>
                <span class="btn btn-sm btn-danger"><%= t('.action.delete') %></span>
                <% end %>
              </td>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
